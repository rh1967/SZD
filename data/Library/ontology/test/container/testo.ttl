#dhplus
szd:Book
    a owl:Class;

#owl classification
.
_:BookShape
    a sh:NodeShape ;

#shacl validation
.
_:BookRule
    a sh:NodeShape ;

#shacl validation
    sh:targetClass szd:OriginalShelfmark ;
#sparql generation
    sh:rule [
                a sh:SPARQLRule ;
                sh:prefixes dhpluso:book ;
                sh:construct """            
            CONSTRUCT {
                dhpluso:test ?p "result"
            }
            WHERE
            {
                {
                    SELECT DISTINCT ?p
                    WHERE
                    {
                        $this   a szd:OriginalShelfmark ;
                                ?p  ?o .
                    }
                } .
                {

                }
            }
            #LIMIT 1
        """ ;
            ] ;
.
